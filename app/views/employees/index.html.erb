<p id="notice"><%= notice %></p>

<% if current_user.is_admin.to_s == "true" %>
  <td><%= link_to "Admin #{current_user.name}'s Profile", api_employee_path(current_user) %></td>
<% else %>
  <td><%= link_to "#{current_user.name}'s Profile", api_employee_path(current_user) %></td>
<% end %>
<td> | <%= link_to "Log Out", logout_path, method: :delete %></td>

<h1>Listing Employees</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Division</th>
      <th>Address</th>
      <% if logged_in? %>
        <% if current_user.is_admin.to_s == "true" %>
          <th>Admin Access?</th>
        <% end %>
      <% end %>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.id %></td>
        <td><%= employee.name %></td>
        <td><%= employee.division %></td>
        <td><%= employee.address %></td>
        <% if current_user.is_admin.to_s == "true" %>
          <td><%= employee.is_admin %></td>
          <td><%= link_to 'Show', api_employee_path(employee) %></td>
          <td> | <%= link_to 'Edit', edit_api_employee_path(employee) %></td>
          <td> | <%= link_to 'Delete', api_employee_path(employee), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if current_user.is_admin.to_s == "true" %>
  <%= link_to 'New Employee', new_api_employee_path %></br>
<% end %>
<%= link_to 'Back to Home', root_path %>