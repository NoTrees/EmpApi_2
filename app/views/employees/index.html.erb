<p id="notice"><%= notice %></p>

<h1>Listing Employees</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Division</th>
      <th>Authentication</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.id %></td>
        <td><%= employee.name %></td>
        <td><%= employee.division %></td>
        <td><%= employee.authentication %></td>
        <td><%= employee.address %></td>
        <td><%= link_to 'Show', "/employees/#{employee.id}" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

