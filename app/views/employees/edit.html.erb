<p id="notice"><%= notice %></p>

<h1>Editing Employee</h1>

<%= form_for @employee, url: api_employee_path do |f| %>
  <div>
    <%= f.label :id %><br>
    <%= f.text_field :id %>
  </div>
  <div>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :division %><br>
    <%= f.text_field :division %>
  </div>
  <div>
    <%= f.label :address %><br>
    <%= f.text_field :address %>
  </div>
  <div>
    <%= f.label :password %>
    <%= f.text_field :password %>
  </div>
  <div>
    <%= f.label :is_admin %><br>
    <%= f.text_field :is_admin %>
  </div></br>

  <div>
    <%= f.submit %>
  </div></br>

	<%= link_to 'Show', api_employee_path(@employee) %> |
	<%= link_to 'Back', api_employees_path %>
<% end %>
